    ViewBag.Title = "事务申请统计";
    Layout = "~/Areas/Admin/Views/Shared/_ListLayout.cshtml";
}
  
@section search{
    <table class="SearchTable">

        <tr class="Trbgc_Top">
            <th>
                <label class="control-label">
                    申请人 ：
                </label>
            </th>
            <td>
                <input type="text" class="layui-input" id="ApplyUserName" name="ApplyUserName" placeholder="请选择申请人" readonly onclick="ChooseApplyUser()">
            </td>

            <th>
                <label class="control-label">
                    申请时间：
