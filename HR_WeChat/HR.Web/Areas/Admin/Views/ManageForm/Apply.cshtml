            <th data-options="field:'LeaveCount',width:'10%',align:'center',sortable:true">
                请假申请
            </th>
            <th data-options="field:'OutCount',width:'15%',align:'center',sortable:true">
                外出申请
            </th>
            <th data-options="field:'BusinessCount',width:'15%',align:'center',sortable:true">
                出差申请
            </th>
            <th data-options="field:'ExtWorkCount',width:'15%',align:'center',sortable:true">
                加班申请
            </th>
            <th data-options="field:'SupplementCount',width:'15%',align:'center',sortable:true">
                补卡申请
            </th>
        </tr>
    </thead>
</table>

 
<script>

